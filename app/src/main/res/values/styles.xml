<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Material Button Theme -->
    <style name="ButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Header TextView Theme -->
    <style name="HeaderTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorContentDark</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/textview_header_style</item>
    </style>

    <!-- AudioBook Name Theme -->
    <style name="AudioBookTheme">
        <item name="android:textColor">@color/colorContentDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <!-- AudioBook Name Theme -->
    <style name="AuthorTheme">
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
