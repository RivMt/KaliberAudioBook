<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Material Button Theme -->
    <style name="ButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Material Outline Button Theme -->
    <style name="OutlineButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Header TextView Theme -->
    <style name="HeaderTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorContentDark</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/textview_header_style</item>
    </style>

    <!-- AudioBook Name Theme -->
    <style name="AudioBookTheme">
        <item name="android:textColor">@color/colorContentDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <!-- AudioBook Author Theme -->
    <style name="AuthorTheme">
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- AudioBook Name Theme -->
    <style name="InfoAudioBookTheme">
        <item name="android:textColor">@color/colorContentDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>

    </style>

    <!-- AudioBook Author Theme -->
    <style name="InfoAuthorTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- AudioBook Date Theme -->
    <style name="InfoDateTheme">
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- AudioBook Progress Theme -->
    <style name="InfoProgressTheme">
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
